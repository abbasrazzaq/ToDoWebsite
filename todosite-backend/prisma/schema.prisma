generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Priority {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  todos   Todo[]
}

model Todo {
  id            Int       @id @default(autoincrement())
  description   String
  completed     Boolean   @default(false)
  priorityId    Int?
  priority      Priority?  @relation(fields: [priorityId], references: [id])
  createdAt     DateTime  @default(now()) 
}